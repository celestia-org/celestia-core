{
  "genesis_time":"{{ansible_date_time.iso8601}}",
  "chain_id":"{{testnet_name}}",
  "validators":
  [
{% if validators == true %}
{% set comma = joiner(",") %}
{% for host in groups[testnet_name] %}
    {{ comma() }}
    {
      "pub_key": {
        "data": "{{hostvars[host]["pubkey"]["data"]}}",
        "type": "ed25519"
      },
      "amount":10,
      "name":"{{hostvars[host]["ansible_hostname"]}}"
    }
{% endfor %}
{% endif %}
  ],
  "app_hash":"",
  "app_options": {}
}

